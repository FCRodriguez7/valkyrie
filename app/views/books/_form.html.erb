<%= simple_form_for @form do |f| %>
  <% (@form.class.fields - [:member_ids]).each do |field| %>
    <% if f.object.send(field).respond_to?(:each) %>
      <%= f.input field, as: :multi_value %>
    <% else %>
      <%= f.input field %>
    <% end %>
  <% end %>
  <% if @form.append_id.present? %>
    <%= f.input :append_id, as: :hidden %>
  <% end %>
  <%= f.button :submit %>
<% end %>
